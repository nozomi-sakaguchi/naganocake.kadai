<div class="container pt-5">
  <div class="row ml-3 mb-5">
    <h2 class="bg-light">ジャンル 一覧・追加</h2>
  </div>

  <%= form_with model: @genre, url:admin_genres_path do |f| %>
    <div class="form_group mb-5">
      <label for= "genre_name">ジャンル名</label>
      <%= f.text_field :name , class: " ml-3" %>
      <%= f.submit '新規投稿', class: "btn btn-success btn-sm ml-3" %>
    </div>
  <% end %>

  <div class="row col-5">
  <table class="table">
    <thead class=" bg-light">
      <tr >
        <th>ジャンル</th>
        <th></th>
      </tr>
    </thead>

  <% @genres.each do |genre| %>
    <tbody>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre.id) , class: "btn btn-success btn-sm ml-3 px-3" %></td>
      </tr>
    </tbody>
  <% end %>
  </tabel>
  </div>
</div>