<div class= "container pt-5">
  <div class="row">
    <h2 class="bg-light mb-3">商品編集</h1>
  </div>

  <%= form_with model: @item, url:admin_item_path(@item.id) do |f| %>
    <div class="form_group align-middle">
      <label for= "item_image">商品画像</label>
      <%= f.file_field :image ,accept: "image/*" %>
    </div>

    <div class="form_group">
      <label for= "item_name">商品名</label>
      <%= f.text_field :name, auotfocus: true, id: "item_name" %>
    </div>

    <div class="form_group">
      <label for= "item_introduction">商品説明</label>
      <%= f.text_area :introduction, auotfocus: true, id: "item_introduction" %>
    </div>

    <div class="form_group">
      <label for= "item_genre">ジャンル</label>
      <%= f.collection_select(:genre_id, Genre.all, :id,:name, {prompt: "選択してください" }) %>
    </div>

    <div class="form_group">
      <label for= "item_price"> 税抜価格</label>
      <%= f.text_field :price,  auotfocus: true, id: "item_price "%>円
    </div>

    <div class="form_group">
      <label for= "item_is_active">販売ステータス</label>
      <%= f.radio_button :is_active, true %>
      <%= f.label :is_active, "販売中" %>
      <%= f.radio_button :is_active, false %>
       <%= f.label :is_active, "販売停止中" %>
    </div>

    <%= f.submit "変更を保存", class: "btn btn-success btn-sm" %>
  <% end %>
</div>