<div class="container" >
  <div class ="row justify-content-between">
    <h2 class="bg-light" >商品一覧</h2>
    <%= link_to new_admin_item_path do %>
      <i class="fas fa-plus"></i>
    <% end %>
  </div>
  

  <table class=table >
    <thead>
      <tr bgcolor= "whitesmoke" >
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th></th>
      </tr>
    </thead>

  <% @items.each do |item| %>
    <tbody>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to admin_item_path(item.id) do %>
              <%= item.name %>
            <% end %>
        </td>
        <td><%= item.price %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == true %>
          販売中
          <% else %>
          販売停止中
          <% end %>
        </td>
      </tr>
    </tbody>
  <% end%>
  </table>

  <%= paginate @items %>