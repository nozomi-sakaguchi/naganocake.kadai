<div class= "container">
  <div class="row">
    <h2 class="bg-light">商品詳細</h2>
  </div>

  <div class ="row col-5">
  <%= image_tag @items.get_image(500,500) %>


<div class="item col-7s">

  <div class="form_group pb-3">
    <label for= "item_name">商品名</label>
    <%= @items.name %>
  </div>

  <div class="form_group">
    <label for= "item_introduction">商品説明</label>
    <%= @items.introduction %>
  </div>

  <div class="form_group">
    <label for= "item_genre">ジャンル</label>
    <%= @items.genre.name %>
  </div>

  <div class="form_group">
    <label for= "item_price"> 税込価格<br>(税抜価格）</label>
    <%= (@items.price*1.08).floor %>(<%= @items.price %>)円
  </div>

  <div class="form_group">
    <label for= "item_is_active ">販売ステータス</label>
    <% if @items.is_active == true %>
      販売中
    <% else %>
      販売停止中
    <% end %>
  </div>
</div>

</div>
  <div class= "form-group">
    <%= link_to '編集する',edit_admin_item_path, class: "btn btn-success btn-sm" %>
  </div>

  </div>