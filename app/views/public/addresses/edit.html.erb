<h2>配送先編集</h2>

<%= form_with model: @address do |f| %>

   <div class= "field">
     <label for= "address.postal_code">郵便番号(ハイフンなし)</label>
      <%= f.text_field :postal_code %>
  </div>

  <div class= "field">
     <label for= "address.address">住所</label>
      <%= f.text_field :address %>
  </div>

  <div class= "field">
     <label for= "address.name">宛名</label></label>
      <%= f.text_field :name %>
      <%= f.submit "変更内容を保存" , class: "btn btn-success btn-sm"  %>
  </div>

<% end %>