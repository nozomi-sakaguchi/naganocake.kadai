<h2>ショッピングカート</h2>


<%= link_to "カートを空にする", cart_items_destroy_all_path , method: :delete, class: "btn btn-danger btn-sm" %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>

<% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= image_tag cart_item.item.image %>
          <%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <%= form_with model:cart_item  do |f| %>
            <%= f.select :amount, *[1..10] %>
            <%=f.submit "変更" , class: "btn btn-success btn-sm" %>
      <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", cart_item_path(cart_item), method: :delete, class: "btn btn-danger btn-sm" %></td>
    </tr>
  </tbody>
   <% @total += cart_item.subtotal %>
<% end %>
</table>


<%= link_to "買い物を続ける", root_path, class: "btn btn-success btn-sm" %>
 <td>   合計金額<%= @total %></td>
<%= link_to "情報入力に進む", new_order_path,  class: "btn btn-success btn-sm" %>