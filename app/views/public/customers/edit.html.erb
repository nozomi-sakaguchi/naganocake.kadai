<h2>会員情報編集</h2>

<%= form_with model: @customer do |f| %>

  <div class="group">
    <label for= "customer_id">会員ID</label>
    <%= @customer.id  %>
  </div>

  <div class= "field">
    <%= f.label :氏名 %>
      <%= f.text_field :last_name %>
      <%= f.text_field :first_name %>
  </div>

  <div class= "field">
    <%= f.label :フリガナ %>
      <%= f.text_field :last_name_kana %>
      <%= f.text_field :first_name_kana %>
  </div>

  <div class= "field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code %>
  </div>

  <div class= "field">
    <%= f.label :住所 %>
    <%= f.text_field :address, placeholder: "東京都渋谷区代々木" %>
  </div>

  <div class= "field">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "編集内容を保存" , class: "btn btn-success btn-sm" %>
    <%=link_to "退会する",  customers_secession_path, class: "btn btn-danger btn-sm" %>
  </div>
<% end %>