
<div class="container mt-5">

  <div class="row">
    <h3 class="bg-light">マイページ</h3>
  </div>

  <div class= "group my-4">
    <label for= "customer_information "><strong>登録情報</strong></label>
    <%= link_to "編集する", edit_customer_path(@customer.id), class:"btn btn-success btn-sm ml-3" %>
  </div>

<table class= "table table-bordered">
  <tr><th class=" col-3">氏名</th><td><%= @customer.last_name %><%= @customer.first_name %></td></tr>
  <tr><th>カナ</th><td> <%= @customer.last_name_kana %><%= @customer.first_name_kana %></td></tr>
  <tr><th>郵便番号</th><td> <%= @customer.postal_code %></td></tr>
  <tr><th>住所</th><td> <%= @customer.address %></td></tr>
  <tr><th>電話番号</th><td> <%= @customer.telephone_number %></td></tr>
  <tr><th>メールアドレス</th><td> <%= @customer.email %></td></tr>
</table>


<div class= "group">
  <label for= "address "><strong>配送先</strong></label>
  <%= link_to "一覧を見る", addresses_path(current_customer.id), class:"btn btn-primary btn-sm ml-3" %>
</div>

<div class= "group">
  <label for= "oders"><strong>注文履歴</strong></label>
  <%= link_to "一覧を見る", orders_path, class:"btn btn-primary btn-sm ml-3" %>
</div>

</div>