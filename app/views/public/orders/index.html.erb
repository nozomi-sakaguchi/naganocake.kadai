<div class="container mt-5">

<h2>注文履歴一覧</h2>

<table border= "1">
  <thead >
    <tr bgcolor= "whitesmoke" >
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
  </thead>

  <% @orders.each do |order| %>
  <tbody>
    <tr>
      <td><%= l order.created_at %></td>
      <td><%= order.address %></td>
      <td><% order.order_items.each do |item| %>
            <%= item.item.name %>
          <% end %>
      </td><% @total += order.payment_amount %>
      <td><%= @total + 800 %></td>
      <td><%= link_to "表示する", order_path(order) %> </td>
    </tr>
  </tbody>
  <% end %>

</table>

