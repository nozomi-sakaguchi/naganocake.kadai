<div class="container">

  <div class="row">
    <h2 class="bg-light">新規会員登録</h2>
    </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

    <div class= "field">
      <%= f.label :名前 %>
      (姓）<%= f.text_field :last_name,  placeholder: "山田" %>
      (名) <%= f.text_field :first_name, placeholder: "花子" %>
    </div>

    <div class= "field">
      <%= f.label :フリガナ %>
      (セイ）<%= f.text_field :last_name_kana,  placeholder: "ヤマダ" %>
      (メイ) <%= f.text_field :first_name_kana, placeholder: "ハナコ" %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %>
      <%= f.email_field :email, placeholder: "sample@nagano.com", autofocus: true, autocomplete: "email" %>
    </div>

    <div class= "field">
      <%= f.label :郵便番号 %>(ハイフンなし)
      <%= f.text_field :postal_code,  placeholder: "0000000" %>
    </div>

    <div class= "field">
      <%= f.label :住所 %>
      <%= f.text_field :address, placeholder: "東京都渋谷区代々木" %>
    </div>

    <div class= "field">
      <%= f.label :電話番号 %>(ハイフンなし)
      <%= f.text_field :telephone_number,  placehoder: "0000000000" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> 文字以上)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %>(確認用)
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="actions">
      <%= f.submit "新規登録", class: "btn btn-success btn-sm" %>
    </div>
<% end %>


<h3>既に登録済みの方</h3>
<div class="row">
     <%= render "public/shared/links" %>
     からログインしてください。
    </div>
</div>
